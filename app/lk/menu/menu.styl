ancho = alto-menu
sombra-menu = 0 2px 5px rgba(primary-color-dark,0.26)
sombra-extra-menu = 0 3px 6px rgba(0,0,0,0.6)
color-txt-menu= white //primary-color-light
color-menu= primary-color
.Menu
	font-family fuente-titulos
	background color-menu//rgba(#fff,.7)
	box-shadow sombra-menu
	display block
	font-size 24px
	height alto-menu
	left 0
	margin 0
	padding 0
	position fixed
	right 0
	top 0
	z-index 8
.Menu-item
	display inline
	float left
	height 2em
	text-align center
	width 2em
	z-index 10
button.fa
	background none
	border none
	color color-txt-menu
	outline none
	padding 1px .25em
	&:hover
		cursor pointer
	&:active
		border 0
	&.u-left
		text-align left
		float left
		margin 8px 0 0 12px
	&.u-right
		text-align right
		float right
		margin 8px 12px 0 0
	&:before
		margin-right 8px
	&.u-action-call
		background color-menu//#FF7A00
		border-radius 50%
		box-shadow sombra-menu
		color white
		transition .3s ease-in
		// transform translateY(50%)
		&.u-selected
			background action-color//#FFA24C//FF8C22
			box-shadow sombra-extra-menu
		&:hover
			background primary-color-dark//#FFA24C//FF8C22
		&.u-selected:hover
			background action-color-light//#FFA24C//FF8C22
			
.Menu-logo
	-webkit-transition 1s
	float right
	top 0
	height ancho
	width ancho
	z-index 10
	&:hover
		cursor pointer
		-webkit-transform rotate(360deg)			
		
.Menu-textoLogo
	color white
	left ancho
	margin-left 1em
	overflow hidden
	position absolute
	top (ancho/2)
	width (ancho*2)

.Menu-icon
	margin-top 5px
	height 45px
	width 45px
	

.Menu-text
	color color-txt-menu
	display none
	margin-left 1em
	overflow hidden
	position absolute
	top 50%
	transform translateY(-50%)
	width (ancho*2)
