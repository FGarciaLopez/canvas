ancho-menu= 60px
alto-menu =60%
fondo-menu= rgba(#000,.5)
color-txt-menu= #333
posicion()
	top 20%
	left 0px
	
// menu-lateral.styl
.MenuLateral-container
	position fixed
	display block
	width ancho-menu
	height alto-menu
	background fondo-menu
	-webkit-transition all .3s
	z-index 9
	posicion()
	&:hover
		width 200px
		.MenuLateral-text
			display inline-block
.MenuLateral
	position absolute
	display block
	top 0
	left 0
	padding 0px
.MenuLateral-item
	position relative
	display block
.MenuLateral-btn
	padding 0
	&:hover
		cursor pointer
.MenuLateral-logo
	top 0
	height ancho-menu
	width ancho-menu
	-webkit-transition 1s
	&:hover
		cursor pointer
		-webkit-transform rotate(360deg)			
.MenuLateral-icon
	margin-left ((ancho-menu - 45 )/2)px
	margin-top 5px
	height 45px
	width 45px
.MenuLateral-text
	display none
	color color-txt-menu
	position absolute
	left 0
	width (ancho-menu*2)
	top (ancho-menu/2)
	margin-left (ancho-menu+2em)
	color white !important
	overflow hide

