ancho-menu= 60px
alto-menu =60%
fondo-menu= rgba(#000,.5)
posicion()
	top 20%
	left 0px
	
// menu-lateral.styl
.MenuLateral-container
	background fondo-menu
	bottom 0
	display block
	left 0
	position fixed
	right 0
	top 0
	z-index 10
.MenuLateral
	background white
	box-shadow 0 4px 5px rgba(#fff,0.26)
	display block
	height 100%
	left 0
	margin 0
	padding 0px
	position relative
	transition .5s
	width 200px
	z-index 10
	animation slidein .3s ease-in


.MenuLateral-item
	position relative
	display block
	&.u-separate-bottom
		border-bottom 1px solid #aaa
	&.u-separate-top
		border-top 1px solid #aaa
	a
		display block
		top 0
		bottom 0
.MenuLateral-text
	display inline-block
	line-height 200%
.MenuLateral-textoLogo
	display inline-block
.MenuLateral-btn
	padding 0
	&:hover
		cursor pointer
.MenuLateral-logo
	top 0
	height ancho-menu
	width ancho-menu
	transition 1s
	&:hover
		cursor pointer
		transform rotate(360deg)			
.MenuLateral-icon
	margin-left ((ancho-menu - 45 )/2)px
	margin-top 5px
	height 45px
	width 45px
	
.MenuLateral-text
	color color-txt-menu
	margin-left 1em
	overflow hidden
	width (ancho-menu*2)
