ancho-menu= 250px
alto-menu =60%
fondo-menu= rgba(#000,.5)

// menu-lateral.styl
.MenuLateral-container
	background fondo-menu
	bottom 0
	display block
	left 0
	position fixed
	right 0
	top 0
	z-index 10
.MenuLateral
	animation slidein .3s ease-in
	background white
	display block
	height 100%
	left 0
	margin 0
	padding 0
	position relative
	transition .5s
	width ancho-menu
	z-index 10

.MenuLateral-header
	display block
	height 4em
	color white !important
	background color-txt-menu//#84D4C8
.MenuLateral-item
	color color-txt-menu
	display block
	height 2em
	&.u-separate-top
		border-top 1px solid color-txt-menu
	&.u-activo
		background #f7f7f7
	&:hover
		color white
		background #69CCDA// 3FBACB
	
.MenuLateral-btn
	display inline-block
	height 2em
	padding 0
	&:hover
		cursor pointer
.MenuLateral-logo
	display inline-block
	height 2em
.MenuLateral-logo-text
	display inline-block
	height 2em
	overflow hidden
.MenuLateral-icon
	width 1em
	margin-right .5em
	
.MenuLateral-text
	display inline-block
	line-height 2em
	margin-left 1em
	overflow hidden
