fondo-menu= rgba(#000,.5)
color-txt-menu = primary-color-dark

// menu-lateral.styl
.MenuLateral-container
	font-family fuente-titulos
	bottom 0
	display block
	left 0
	position fixed
	right 0
	top 0
	z-index 10
	background fondo-menu
	animation fadein .3s ease-in
.MenuLateral
	animation slidein-menu .3s linear
	background white
	display inline-block
	height 100%
	left 0
	margin 0
	overflow auto
	padding 0
	position relative
	transition .3s
	width ancho-menu
	z-index 10
.MenuLateral-header
	display block
	height 4em
	color white !important
	background color-txt-menu
.MenuLateral-item
	position relative
	color color-txt-menu
	display block
	height 2em
	transition .3s all
	&.u-separate-top
		border-top 1px solid color-txt-menu
	&.u-separate-bottom
		border-bottom 1px solid color-txt-menu
	&.u-selected
		background primary-color-light
	&:hover
		color white
		background primary-color // #69CCDA// 69CCDA// 3FBACB
	
.MenuLateral-btn
	display block
	height 2em
	padding 0
	text-decoration none
	&:hover
		cursor pointer
	&.u-action-call
		color white
		background-color action-color
		&[disabled]
			color action-color-light
			cursor default
			
.MenuLateral-logo
	display inline-block
	height 2em
	img 
		margin .4em 0 0 .2em
.MenuLateral-logo-text
	cursor default
	display inline-block
	font-weight 400
	height 2em
	overflow hidden
.MenuLateral-icon
	width 1em
	margin-right 1em
	
.MenuLateral-text
	display inline-block
	line-height 2em
	margin-left 1em
	overflow hidden
.MenuLateral-background
	display inline-block
	height 100%
	position absolute
	width 100%

@keyframes slidein-menu {
  from {
    left - ancho-menu
  }

  to {
    left 0
  }
}
