ancho-menu= 250px
fondo-menu= rgba(#000,.5)

// menu-lateral.styl
.MenuLateral-container
	background fondo-menu
	bottom 0
	display block
	left 0
	position fixed
	right 0
	top 0
	z-index 10
.MenuLateral
	animation slidein .3s ease-in
	background white
	display inline-block
	height 100%
	left 0
	margin 0
	overflow auto
	padding 0
	position relative
	transition .5s
	width ancho-menu
	z-index 10
.MenuLateral-header
	display block
	height 4em
	color white !important
	background color-txt-menu
.MenuLateral-item
	color color-txt-menu
	display block
	height 2em
	transition .3s all
	&.u-separate-top
		border-top 1px solid color-txt-menu
	&.u-separate-bottom
		border-bottom 1px solid color-txt-menu
	&.u-selected
		background #eef
	&:hover
		color white
		background #69CCDA// 69CCDA// 3FBACB
	
.MenuLateral-btn
	display block
	height 2em
	padding 0
	text-decoration none
	&:focus
		outline 0
		background-color action-color
	&:hover
		cursor pointer
	&.u-action-call
		color white
		background-color action-color
		&[disabled]
			color action-color-light
			cursor default
			
.MenuLateral-logo
	display inline-block
	height 2em
	img 
		margin .4em 0 0 .2em
.MenuLateral-logo-text
	cursor default
	display inline-block
	height 2em
	overflow hidden
.MenuLateral-icon
	width 1em
	margin-right 1em
	
.MenuLateral-text
	display inline-block
	line-height 2em
	margin-left 1em
	overflow hidden
.MenuLateral-background
	display inline-block
	height 100%
	position absolute
	width 100%
