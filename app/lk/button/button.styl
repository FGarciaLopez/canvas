.u-button
//	position relative
	padding 0
	box-shadow 0 2px 5px rgba(#000,0.5)
	transition all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
	overflow hidden
	position relative
	//transition all .4s
	&:active
		transform translateY(1px)
	&:hover
		cursor pointer
		box-shadow 0 2px 5px rgba(#000,0.2)
	&.u-success
		background success-color
		&[disabled]
			background success-color-dark
			color success-color-light !important
		&:hover
			background success-color-light
	&.u-warning
		background warning-dark
		&:hover
			background warning-light
	&.u-danger
		background color-danger-dark
		&:hover	
			background color-danger-light
	&.u-info
		background info-color-dark
		&:hover
			background info-color-light
	&.u-primary
		background primary-color
		&:hover
			background primary-color-light
	&.u-transparent
		box-shadow none
		background transparent
		&:hover
			background rgba(#fff,.26)
	&.u-switch
		border-radius 24px
		border 4px
		border-style solid
		height 48px
		width 96px
		color white
		img
			position absolute
			bottom -1px
			height 44px !important
			width 44px !important
		&.u-on
			background success-color
			border-color success-color-shadow
			&:after
				content "SÃ­"
				margin-left 2em
			&:hover
				background success-color-light
			img
				animation toOff .5s
				left 0
		&.u-off
			background color-danger-dark
			border-color color-danger-shadow
			&:before
				content "No"
				margin-right 2em
			&:hover
				background color-danger-light
			img
				left 48px
				animation toOn .5s

.lk-ink
	display block
	position absolute
	background white
	border-radius 100%
	transform scale(0)
	z-indez 999
	&.animate 
		animation ripple 0.65s linear

@keyframes ripple {
	/*scale the element to 250% to safely cover the entire link and fade it out*/
	100% {opacity: 0; transform: scale(1.5);}
}
