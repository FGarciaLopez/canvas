ancho=125px
fuente = 'Indie flower', Arial
.Comportamientos-contenedor
	//background-color #E0EEFD
	width 100%
.Comportamientos-lista
	margin-left .5em
.Comportamientos-item
	display inline-block !important
	padding 4px 0 4px 0 !important

.Comportamientos-intro
	text-align left
	margin 1em auto

.Comportamientos-icon
	float left
	height ancho
	margin .5em 0 1em .2em
	width ancho
.Comportamientos-texto
	background-color #27513F
	border .5em solid #8A6D4D
	box-shadow sombra
	color white
	display inline-block
	font-family fuente
	left 50%
	min-width 250px
	position relative
	transform translateX(-50%)
	width 95%
	div
		margin 1em 0 0 1em
		display inline-block
	ul
		display block
		padding-left 2em
	li
		list-style-type none
		margin-left 1em
	.u-destacado
		font-weight bold
		text-decoration underline

@media screen and (max-width: 600px)  {
	.Comportamientos-icon {
		display none
	}
}