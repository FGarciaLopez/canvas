color-tablero = lightness(primary-color,30%)
fuente-tablero = black
bg-objetivos=#6EA8AD
bg-mecanicas=#80A4A0
bg-experiencia=#CDB0E5
bg-comportamientos=#F1849B
bg-componentes=#ADF46D
bg-disparadores=#7CDA72
bg-motivadores=#EE9643

resalta( c)
	background u-mas-brillo( c, 10%)

.Canvas
	background-color color-tablero
	color fuente-tablero
	border .8em solid color-tablero !important
	border-radius 1em
	box-shadow 0 2px 10px rgba(#000,0.7)
	font-family fuente-normal
	font-weight 600
	margin 1em 2em 0 1em

.Canvas-item
	border 0 //border .3em solid color-tablero
	border-radius .5em
	margin .3em 0
	padding 0
	transition all .5s
	box-shadow 0 2px 5px rgba(#000,0.7)
	img, span, figure
		display block
		margin-left auto
		margin-right auto
	span
		padding-top .5em !important
	img
		width 125px
		height 125px
	&:hover
		box-shadow 0 2px 5px rgba(#000,0.26)
		cursor pointer
//		border .3em ridge  primary-color
.Canvas-contador
	bottom 0
	font-weight 400
	margin 0 2em .5em 0 !important
	position absolute
	right 0
	text-align center
.Canvas-experiencia
	background bg-experiencia
	display inline-block
	width 35%
	min-height 185px !important
	&:hover
		resalta( bg-experiencia)
.Canvas-text
	display inline-block
	//width 49% !important
	width 125px
	height 115px
	margin-top 2px
	background rgba(255,0,0,0.3)
	span
		width 80%
		font-weight 600
.Canvas-col
	display inline-block
	height 340px
	min-width 120px
	vertical-align top
	width 31%
	img
		position relative
		top 50px
.Canvas-objetivos
	background bg-objetivos//D98BB1
	float left
	&:hover
		resalta( bg-objetivos)
.Canvas-disparadores
	background-color bg-disparadores//F9A95E
	float right
	&:hover
		resalta( bg-disparadores)
.Canvas-contador
	display inline-block
	text-align center
	position absolute
	bottom 0
.Canvas-comportamientos
	background bg-comportamientos//F9C85E
	display inline-block
	min-width 35%
	&:hover
		resalta( bg-comportamientos)
.Canvas-row
	display block
	height 30%
	position relative
	width 100%
.Canvas-motivadores
	background-color bg-motivadores//F06162
	&:hover
		resalta(bg-motivadores)
.Canvas-mecanicas
	background-color bg-mecanicas//81C990
	&:hover
		resalta( bg-mecanicas)
.Canvas-componentes
	background-color bg-componentes//80A5C7
	&:hover
		resalta( bg-componentes)

@media screen and (max-width: 800px)
	.Canvas
		margin .5em .5em 0 .2em
	.Canvas-col
		width 49% !important
		height 300px
	.Canvas-experiencia
	.Canvas-comportamientos
		width 100%
@media screen and (max-width: 480px)
	.Canvas-col
		height auto
		width 100% !important
		img
			top 0
