//cartas.styl
ancho = 250px
fuente = 'Indie flower', "Serif"
color-fondo = #FFE271
.PostIt-contenedor
	text-align center
	height ancho
	width 100% !important
.PostIt
	background-color color-fondo
	box-shadow 0 2px 10px rgba(#000,0.26)
	display inline-block
	font-family fuente
	font-weight bold
	height ancho
	margin .5em .2em 2em .3em
	padding 0 !important
	position relative
	text-align center
	width ancho
@css {
	.PostIt:before {
		content: "";
		position: absolute;
		left: 0;
		top: 100%;
		width: 100%;
		height: 16px;
		background-image: url("/img/shadow.png");
	}
}
.PostIt-texto
	background transparent
	font-size 18px
	font-weight 600
	bottom 0
	border 0
	cursor  pointer
	display inline-block
	font-family fuente
	top 0
	left 0
	padding 1em
	position absolute
	vertical-align center
	width ancho
	z-index 1
	&:focus
		cursor auto
		border-radius 0 !important
		background rgba( #fff, 0.2)
	&.u-transparent
		background transparent
		border-radius 1em
		text-decoration none
		border 0
		&.u-transparent:hover
			cursor pointer
.PostIt-botonera
	bottom 0
	color white
	font-size 24px
	height 2.3em
	line-height 2em
	margin 2px 1em -1em 0
	position absolute !important
	right 0
	text-align right
	width 6em
	z-index 2
	.PostIt-btn
		@extends .u-button 
		@extends .u-fadein
		@extends .u-raised
		height 2em
		line-height 2em
		margin-right .3em
		text-align center
		width 2em
.u-bubble
	height 100px
	margin 2px 2px 0 0
	position absolute
	right 10%
	top 40%
	width 80%
	z-index 99
.PostIt-add
	@extends .u-button.u-success
	@extends .u-fadein
	@extends .u-raised

placeloder()
	color #555
	font-weight 400
	font-size 18px
::-webkit-input-placeholder
	placeloder()
:-moz-placeholder 
	placeloder()
::-moz-placeholder
	placeloder()
:-ms-input-placeholder
	placeloder()

